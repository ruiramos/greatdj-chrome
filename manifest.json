{
  "manifest_version": 2,

  "name": "GreatDJ",
  "description": "This extension automatically saves all the playlists you create or access in great.dj, for the greatest convenience.",
  "version": "2.6.1",

 "permissions": [
    "webNavigation", "storage", "https://great.dj/*"
  ],

  "browser_action": {
    "default_icon": "greatdj.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "greatdj.png",
    "48": "appicon-48.png",
    "128": "appicon.png"
  },

  "background": {
    "scripts": ["runner.js"],
    "persistent": false
  }
}
